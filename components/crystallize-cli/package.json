{
    "name": "@crystallize/cli-next",
    "version": "4.2.0",
    "description": "Crystallize CLI",
    "main": "./build/index.js",
    "repository": "https://github.com/CrystallizeAPI/crystallize-cli-next",
    "license": "MIT",
    "bin": {
        "crystallize": "./build/index.js"
    },
    "engines": {
        "node": ">=16.0"
    },
    "type": "module",
    "volta": {
        "node": "16.17.0",
        "yarn": "1.22.19"
    },
    "devDependencies": {
        "@commitlint/config-conventional": "^17.1.0",
        "@commitlint/format": "^17.0.0",
        "@commitlint/types": "^17.0.0",
        "@semantic-release/changelog": "^6.0.1",
        "@semantic-release/git": "^10.0.1",
        "@tsconfig/node16": "^1.0.3",
        "@types/jest": "^29.0.0",
        "@types/node": "^16",
        "@types/react": "^17",
        "@types/uuid": "^8.3.4",
        "jest": "^28",
        "prettier": "^2.7.1",
        "semantic-release": "^19.0.5",
        "ts-jest": "^28.0.8",
        "typescript": "^4.8.2"
    },
    "scripts": {
        "dev": "node -r dotenv/config build/index.js",
        "watch": "tsc -W",
        "build": "tsc",
        "test": "jest --setupFiles dotenv/config"
    },
    "dependencies": {
        "@crystallize/js-api-client": "^1.1.1",
        "chalk": "^5.0.1",
        "cli-spinners": "^2.7.0",
        "dotenv": "^16.0.1",
        "gittar": "^0.1.1",
        "ink": "^3.2.0",
        "ink-link": "^2.0.0",
        "ink-text-input": "^4.0.3",
        "meow": "^10.1.3",
        "react": "^17",
        "uuid": "^8.3.2"
    },
    "release": {
        "branches": [
            "main"
        ],
        "prepare": [
            "@semantic-release/changelog",
            "@semantic-release/npm",
            {
                "path": "@semantic-release/git",
                "assets": [
                    "package.json",
                    "CHANGELOG.md"
                ],
                "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
            }
        ]
    },
    "plugins": [
        "@semantic-release/commit-analyzer",
        "@semantic-release/release-notes-generator",
        "@semantic-release/changelog",
        "@semantic-release/github",
        "@semantic-release/npm",
        "@semantic-release/git"
    ]
}
