{
    "extends": ["@commitlint/config-conventional"],
    "rules": {
        "header-max-length": [0, "never", 100],
        "body-max-line-length": [2, "always", 400],
        "type-enum": [
            2,
            "always",
            [
                "build",
                "chore",
                "ci",
                "docs",
                "feature",
                "feat",
                "fix",
                "perf",
                "refactor",
                "revert",
                "style",
                "test",
                "wip"
            ]
        ]
    }
}
